{% if soundcloudTrackId %}
    {% set url = [
        'https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/',
        soundcloudTrackId,
        '&amp;auto_play=false&amp;hide_related=false'
    ] | join %}

    <iframe scrolling="no" src="{{ url }}" width="100%" height="166" frameborder="no" class="soundcloud-iframe"></iframe>
{% endif %}
